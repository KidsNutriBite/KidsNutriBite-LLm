PORT=5000
MONGO_URI=mongodb://localhost:27017/nutrikid
JWT_SECRET=secretkeyshouldbelongandsecure
JWT_EXPIRE=30d
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# OTP mode (set to 'email' to send OTP via email, or comment out to log to console)
OTP_MODE=email
# SMTP (Gmail or other)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=NutriKid<no-reply@nutrikid.com>

# OTP hardening
OTP_EXPIRES_SECONDS=120
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=30

# Login lockout
LOGIN_MAX_FAILS=5
LOGIN_LOCK_MINUTES=15
